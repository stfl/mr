   if ssh -T git@github.com 2>&1 | grep -q successfully; then
      git clone git@github.com:stfl/spacevim.d.git $HOME/.SpaceVim.d
   else
      git clone https://github.com/stfl/spacevim.d.git $HOME/.SpaceVim.d
   fi

